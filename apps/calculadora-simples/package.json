{
  "name": "biblia-diaria-mcp",
  "version": "0.1.0",
  "description": "Bible Daily App - ChatGPT App using MCP + React widget",
  "type": "module",
  "main": "server/dist/index.js",
  "scripts": {
    "build:server": "tsc -p tsconfig.json",
    "build:web": "cd web && npm run build",
    "build": "npm run build:server && npm run build:web",
    "start:server": "node server/dist/index.js",
    "start:fastmcp": "node server/dist/index-fastmcp.js",
    "start:http": "node server/dist/index-http.js",
    "dev:server": "tsc -p tsconfig.json && node server/dist/index.js",
    "dev:fastmcp": "tsc -p tsconfig.json && node server/dist/index-fastmcp.js",
    "dev:web": "cd web && npm run dev",
    "test": "echo \"Tests not yet implemented\" && exit 0",
    "validate": "cd builder && npx ts-node src/validate.ts",
    "validate:openai": "npx ts-node builder/src/openai-compliance.ts",
    "validate:all": "npm run validate && npm run validate:openai"
  },
  "keywords": ["mcp", "chatgpt", "bible", "agent"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@openai/agents": "^0.3.7",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
